{
  "designSystem": {
    "brandName": "UCRS",
    "fullName": "Upper Canada Railway Services",
    "industry": "Railway Parts & Locomotive Services",
    
    "colorPalette": {
      "primary": {
        "red": "#E53E3E",
        "redHover": "#C53030",
        "redLight": "#FED7D7",
        "redDark": "#9B2C2C"
      },
      "secondary": {
        "blue": "#2B6CB0",
        "blueLight": "#BEE3F8",
        "blueDark": "#1A365D"
      },
      "neutral": {
        "white": "#FFFFFF",
        "gray50": "#F7FAFC",
        "gray100": "#EDF2F7",
        "gray200": "#E2E8F0",
        "gray300": "#CBD5E0",
        "gray400": "#A0AEC0",
        "gray500": "#718096",
        "gray600": "#4A5568",
        "gray700": "#2D3748",
        "gray800": "#1A202C",
        "gray900": "#171923"
      },
      "accent": {
        "green": "#38A169",
        "greenLight": "#C6F6D5",
        "orange": "#DD6B20",
        "orangeLight": "#FEEBC8"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "heading": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem",
        "7xl": "4.5rem"
      },
      "fontWeights": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800"
      },
      "lineHeights": {
        "tight": "1.25",
        "snug": "1.375",
        "normal": "1.5",
        "relaxed": "1.625",
        "loose": "2"
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem",
      "6xl": "12rem"
    },

    "layout": {
      "containerMaxWidth": "1200px",
      "containerPadding": "1rem",
      "sectionPadding": "4rem 0",
      "gridGap": "2rem",
      "headerHeight": "80px"
    },

    "components": {
      "buttons": {
        "primary": {
          "backgroundColor": "#E53E3E",
          "color": "#FFFFFF",
          "padding": "12px 24px",
          "borderRadius": "6px",
          "fontSize": "1rem",
          "fontWeight": "600",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#C53030",
            "transform": "translateY(-1px)"
          }
        },
        "secondary": {
          "backgroundColor": "transparent",
          "color": "#E53E3E",
          "padding": "12px 24px",
          "borderRadius": "6px",
          "fontSize": "1rem",
          "fontWeight": "600",
          "border": "2px solid #E53E3E",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#E53E3E",
            "color": "#FFFFFF"
          }
        },
        "ghost": {
          "backgroundColor": "transparent",
          "color": "#4A5568",
          "padding": "12px 24px",
          "borderRadius": "6px",
          "fontSize": "1rem",
          "fontWeight": "500",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#F7FAFC",
            "color": "#2D3748"
          }
        }
      },

      "cards": {
        "default": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "12px",
          "padding": "2rem",
          "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
          "border": "1px solid #E2E8F0",
          "transition": "all 0.2s ease",
          "hover": {
            "boxShadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
            "transform": "translateY(-2px)"
          }
        },
        "testimonial": {
          "backgroundColor": "#F7FAFC",
          "borderRadius": "12px",
          "padding": "2rem",
          "borderLeft": "4px solid #E53E3E",
          "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
        }
      },

      "header": {
        "backgroundColor": "#FFFFFF",
        "height": "80px",
        "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
        "position": "sticky",
        "top": "0",
        "zIndex": "50",
        "padding": "0 1rem"
      },

      "navigation": {
        "linkColor": "#4A5568",
        "linkHoverColor": "#E53E3E",
        "activeLinkColor": "#E53E3E",
        "fontSize": "1rem",
        "fontWeight": "500",
        "transition": "color 0.2s ease"
      },

      "hero": {
        "backgroundColor": "#F7FAFC",
        "minHeight": "600px",
        "padding": "4rem 0",
        "textAlign": "left"
      },

      "sections": {
        "default": {
          "padding": "4rem 0",
          "backgroundColor": "#FFFFFF"
        },
        "alternate": {
          "padding": "4rem 0",
          "backgroundColor": "#F7FAFC"
        },
        "dark": {
          "padding": "4rem 0",
          "backgroundColor": "#2D3748",
          "color": "#FFFFFF"
        }
      },

      "forms": {
        "input": {
          "padding": "12px 16px",
          "borderRadius": "6px",
          "border": "2px solid #E2E8F0",
          "fontSize": "1rem",
          "transition": "border-color 0.2s ease",
          "focus": {
            "borderColor": "#E53E3E",
            "outline": "none"
          }
        },
        "label": {
          "fontSize": "0.875rem",
          "fontWeight": "600",
          "color": "#4A5568",
          "marginBottom": "0.5rem"
        }
      }
    },

    "imagery": {
      "style": "Professional industrial photography",
      "subjects": [
        "Modern trains and locomotives",
        "Railway manufacturing facilities",
        "Technical components and parts",
        "Professional technicians at work",
        "Industrial machinery and equipment"
      ],
      "filters": "Clean, bright, professional lighting",
      "aspectRatios": {
        "hero": "16:9",
        "card": "4:3",
        "thumbnail": "1:1",
        "banner": "21:9"
      }
    },

    "iconography": {
      "style": "Outline/Line icons",
      "library": "Heroicons or Lucide React",
      "strokeWidth": "1.5px",
      "size": "24px",
      "color": "#4A5568"
    },

    "animations": {
      "duration": {
        "fast": "0.1s",
        "normal": "0.2s",
        "slow": "0.3s"
      },
      "easing": {
        "default": "ease",
        "in": "ease-in",
        "out": "ease-out",
        "inOut": "ease-in-out"
      },
      "effects": [
        "Subtle hover transforms (translateY(-2px))",
        "Smooth color transitions",
        "Fade-in animations for content",
        "Gentle scale effects on interactive elements"
      ]
    },

    "pageTemplates": {
      "homepage": {
        "sections": [
          {
            "name": "Hero",
